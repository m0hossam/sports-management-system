@model IEnumerable<SportsWebApp.Models.Stadium>

@{
    ViewData["Title"] = "Available Stadiums";
}

<h1>Available Stadiums</h1>

<h4>List of stadiums available in the interval you specified</h4>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="ViewAvailableStadiumsForm">Back to form</a>
</div>

