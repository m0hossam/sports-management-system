@model SportsWebApp.Models.Stadium

@{
    ViewData["Title"] = "Delete Stadium";
}

<h1>Delete Stadium</h1>
<br />
<h3>Are you sure you want to delete this?</h3>
<br />
<div class="table-responsive">
    <h4>Club</h4>
    <table class="table table-bordered">
        <caption>Stadium details</caption>
        <thead class="thead-light">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Location)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Capacity)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Name)</td>
                <td>@Html.DisplayFor(model => model.Location)</td>
                <td>@Html.DisplayFor(model => model.Capacity)</td>
            </tr>
        </tbody>
    </table>
    <form asp-action="DeleteStadium">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Stadiums">Back to list</a>
    </form>
</div>